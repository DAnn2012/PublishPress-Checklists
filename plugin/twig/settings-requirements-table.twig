<table class="wp-list-table fixed striped pp-checklist-requirements-settings">
	<thead>
		<tr>
			<th width="30%">{{ lang.description }}</th>
			<th width="50%">{{ lang.required }}</th>
			<th width="20%">{{ lang.action }}</th>
		</tr>
	</thead>

	<tbody>
		<tr>
			<td>{{ lang.min_numb_words }}</td>
			<td>
				{{ html_checkbox_bool( { 'id': 'min-word-count', 'name': 'min_words_count', 'post_type': 'global' } ) }}
				{{ html_small_input( { 'id': 'min-word-count-value', 'name': 'min_words_count_value', 'post_type': 'global', 'placeholder': lang.type, 'type': 'number' } ) }}
			</td>
			<td>{{ html_list_of_actions( 'min_words_count', 'global' )|raw }}</td>
		</tr>

		<tr>
			<td>{{ lang.featured_image }}</td>
			<td>
				{{ html_checkbox_bool( { 'id': 'featured-image', 'name': 'featured_image', 'post_type': 'global' } ) }}
			</td>
			<td>{{ html_list_of_actions( 'featured_image', 'global' )|raw }}</td>
		</tr>

		<tr>
			<td>{{ lang.min_numb_tags }}</td>
			<td>
				{{ html_checkbox_bool( { 'id': 'min-tags-count', 'name': 'min_tags_count', 'post_type': 'global' } ) }}
				{{ html_small_input( { 'id': 'min-tags-count-value', 'name': 'min_tags_count_value', 'post_type': 'global', 'placeholder': lang.type, 'type': 'number' } ) }}
			</td>
			<td>{{ html_list_of_actions( 'min_tags_count', 'global' )|raw }}</td>
		</tr>

		<tr>
			<td>{{ lang.min_numb_categs }}</td>
			<td>
				{{ html_checkbox_bool( { 'id': 'min-categories-count', 'name': 'min_categories_count', 'post_type': 'global' } ) }}
				{{ html_small_input( { 'id': 'min-categories-count-value', 'name': 'min_categories_count_value', 'post_type': 'global', 'placeholder': lang.type, 'type': 'number' } ) }}
			</td>
			<td>{{ html_list_of_actions( 'min_categories_count', 'global' )|raw }}</td>
		</tr>
	</tbody>
</table>
